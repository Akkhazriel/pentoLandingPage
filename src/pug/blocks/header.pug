header.header
    //- Container
    .container
        //- Navigation
        .header__nav
            nav.nav
                //- Logo
                .nav__logo 
                    a(href="#!").logo Panto 

                //- Links
                ul.nav-list
                    li.nav-list__item
                        a(href="#!").nav-list__link.nav-list__link--dropdown Furniture
                        .nav-list__sub-nav
                            ul.sub-nav
                                li.sub-nav__item
                                    a(href="#!").sub-nav__link Home 
                                li.sub-nav__item
                                    a(href="#!").sub-nav__link Services 
                                li.sub-nav__item
                                    a(href="#!").sub-nav__link Products 
                                li.sub-nav__item
                                    a(href="#!").sub-nav__link Contacts 

                    li.nav-list__item
                        a(href="#!").nav-list__link Shop
                    li.nav-list__item
                        a(href="#!").nav-list__link About Us
                    li.nav-list__item
                        a(href="#!").nav-list__link Contact
        
                //- Cart
                a(href="#!").cart
                    img(src="./img/icons/cart.svg", alt="Cart").cart__img
                    .cart__count 0

        //- Content
        .header__content
            //- Title
            h1.header__title Make your interior more minimalistic & modern
            //- Description
            p Turn your room with panto into a lot more minimalist and modern with ease and speed
            //- Form
            form(action="").search-form.header__search
                input(placeholder="Search furniture" type="text" autocompleate="off").search-form__input
                button.search-form__btn
                    img(src="./img/icons/search.svg", alt="Search")

